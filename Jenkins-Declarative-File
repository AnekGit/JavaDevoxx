pipeline{
    
    agent any 
    environment{
    
    PATH = "$M2_HOME:$PATH"
    }
     stages{
     
        stage("SCM Checkout"){
        
            steps{
                
                echo "checking out from Git"
                //git credentialsId: 'AnekGit', url: 'https://github.com/AnekGit/JavaDevoxx.git'
            }
            
        }//stage
        
        stage("Maven Package"){
         
         steps{
                
               echo "Maven Clean"
               echo "PATH = ${PATH}"
               echo "M2_HOME = ${M2_HOME}" 
               sh 'mvn clean package'
         }
         
        }//stage
        
        
    }//stages
    
    
}//pipeline
